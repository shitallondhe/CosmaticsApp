<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.cosmaticshop">
    <!-- Permissions -->

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MakeUpApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:targetApi="m"
        android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
        tools:ignore="AllowBackup">
        <!--WebView Activity-->
        <activity android:name=".ui.weblink.WebLinkActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <!--ProductDetails Activity-->
        <activity android:name=".ui.productdetails.view.ProductDetailActivity" />
       <!-- ProductTypes Activity-->
        <activity android:name=".ui.producttype.view.ProductTypeActivity" />
       <!-- SplashScreen-->
        <activity android:name=".ui.splash.view.SplashActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
       <!-- BrandWise Details-->
        <activity android:name=".ui.main.view.MainActivity" />
    </application>

</manifest>